/*
Based on the dataset in (b), create two subsets whose colleges are from
AK or AL separately.
*/

DATA Q3A Q3B;
SET Q2;
IF STATE ='AL' THEN OUTPUT Q3A;
ELSE OUTPUT Q3B;
RUN;
PROC PRINT DATA= Q3A;
proc print data = Q3B;
RUN;

